{
    "name": "devcontainer-devc",
    "dockerComposeFile": [
        "docker-compose.yml",
        "docker-compose.override.yml"
    ],
    "service": "devcontainer",
    "workspaceFolder": "/workspace/devcontainer",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-vscode.vscode-json",
                "redhat.vscode-yaml",
                "GitHub.vscode-pull-request-github"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit",
                        "source.fixAll": "explicit"
                    }
                },
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/*.pyc": true,
                    "**/.pytest_cache": true
                },
                "git.ignoredFolders": [
                    ".pre-commit-cache"
                ]
            }
        }
    },
    "containerEnv": {
        "CONTAINER_HOST": "unix:///var/run/docker.sock",
        "DOCKER_HOST": "unix:///var/run/docker.sock"
    },
    "runArgs": [
        "--cap-add=SYS_ADMIN",
        "--cap-add=MKNOD",
        "--security-opt=label=disable",
        "--device=/dev/fuse",
        "--group-add=0"
    ],
    "postStartCommand": "sudo chmod 666 /var/run/docker.sock 2>/dev/null || true",
    "initializeCommand": ".devcontainer/scripts/initialize.sh",
    "postAttachCommand": "/workspace/devcontainer/.devcontainer/scripts/post-attach.sh",
    "postCreateCommand": "/workspace/devcontainer/.devcontainer/scripts/post-create.sh"
}
